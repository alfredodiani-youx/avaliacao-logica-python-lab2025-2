def analisar_aluno(nome, notas):
    media = (notas[0] + notas[1]) / 2
    if media >= 7:
        situacao = "Aprovado"
    else:
        situacao = "Reprovado"
    return {"nome": nome, "media": media, "situacao": situacao}


alunos = []

for i in range(3):
    nome = input("Nome: ")
    n1 = float(input("Nota 1: "))
    n2 = float(input("Nota 2: "))
    alunos.append(analisar_aluno(nome, [n1, n2]))

print("\n--- RELATÃ“RIO ---")
for a in alunos:
    print(a)
    